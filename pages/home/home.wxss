.bg_img {
  position: fixed;
  top: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}
.result {
  width: 600rpx;
  /* height: 300rpx; */
  padding: 20rpx;
  background-color: rgba(255, 255, 255, .6);
  border-radius: 20rpx;
  position: absolute;
  left: 50%;
  top: 46%;
  transform: translateX(-50%);
  padding-left: 20px;
}
.result::before {
  position: absolute;
  top: -30px;
  left: 50%;
  transform: translateX(-50%);
  content: "";
  width: 0;
  height: 0;
  display: block;
  border: 15px solid transparent;
  border-bottom-color: rgba(255, 255, 255, .6);
}
.item {
  padding: 6px;
}
.control {
  position: absolute;
  bottom: 10%;
  left: 50%;
  transform: translateX(-50%);
}
.control .btn {
  width: 110px;
  /* padding: 3px; */
  /* height: 36px; */
  background-color: rgba(255, 255, 255, .4);
  border-radius: 60px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.control .hover_btn {
  background-color: rgba(255, 255, 255, .6);
}
.control .tips {
  color: #fff;
  margin-bottom: 6px;
}
